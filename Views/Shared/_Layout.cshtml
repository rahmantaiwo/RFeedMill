<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QFeedMill</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QFeedMill.styles.css" asp-append-version="true" />
</head>

<body>
    <header>


    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-white bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QFeedMill</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 t">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
            <form action="@Url.Action("Logout", "Auth")" method="post" style="display: inline;">
                <button type="submit" class="btn btn-link">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>


        </nav>
    </header>

    <script>
        // Success notification
        function showSuccessNotification(message) {
            notyf.success(message);
        }

        // Error notification
        function showErrorNotification(message) {
            notyf.error(message);
        }
    </script>


 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    
    <footer class="border-top footer text-muted bg-success">
        <div class="container text-white">
            &copy; 2024 - QFeedMill - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-dark">Privacy</a>
        </div>
    </footer> 

 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf/notyf.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
