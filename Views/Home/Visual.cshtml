@using Microsoft.AspNetCore.Identity;
@using QFeedmill.Shared.Entities;

@{

    ViewData["Title"] = "";
    <h1>@ViewData["Title"]</h1>
}


<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="text-center text-black">Welcome  To </br> Qista Production Feeds</h4>
                    @if (User.IsInRole("Buyer"))
                    {
                        <div class="mb-3 row mx-auto">
                            <!-- Button: List of Feeds -->
                            <a href="@Url.Action("Feeds", "Feed")" class="btn btn-success mb-2">List of Feeds Created</a>
                        </div>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <div class="mb-3 row mx-auto">
                            <!-- Button: List of Feeds -->
                            <a href="@Url.Action("Feeds", "Feed")" class="btn btn-success mb-2">List of Feeds Created</a>
                        </div>
                        <div class="mb-3 row mx-auto ">
                            <!-- Button: Create Feed -->
                            <a href="@Url.Action("CreateFeed", "Feed")" class="btn btn-success mb-2">Create Feed</a>
                        </div>
                        <div class="mb-3 row mx-auto ">
                            <!-- Button: Categories of Feed -->
                            <a href="@Url.Action("FeedCategories", "FeedCategory")" class="btn btn-success mb-2">Categories of Feed Produced</a>
                        </div>
                        <div class="mb-3 row mx-auto ">
                            <!-- Button: Create Feed List by Category -->
                            <a href="@Url.Action("CreateFeedCategory", "FeedCategory")" class="btn btn-success mb-2">Create FeedCategory</a>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3 row mx-auto">
                            <!-- Button: List of Feeds -->
                            <span>Role not assigned</span>
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <h4 class="text-black text-center">Location: Ipaja Ayobo Lagos</h4>
                    <div style="width: 100%">
                        <iframe width="100%" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                                src="https://maps.google.com/maps?width=100%25&amp;height=300&amp;hl=en&amp;q=3%20Sunny%20Abacha,
                %20Aboru,ipaja+(My%20Business%20Name)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                            <a href="https://www.gps.ie/">gps vehicle tracker</a>
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



