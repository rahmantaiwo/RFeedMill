@using QFeedMill.Models.Dto.FeedCategory;
@model FeedCategoryDto;
@{
	ViewData["Title"] = "Edit FeedCategory";
	var id = Context?.GetRouteValue("Id").ToString();
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">

		<form asp-controller="FeedCategory" method="post" enctype="multipart/form-data" asp-action="UpdateFeedCategory">

			<div class="mb-3">
				<label class="form-label">Name</label>
				<input type="text" class="form-control" name="Name" placeholder="Name"value="@Model.Name" required>

				<div>
					<button asp-controller="FeedCategory" asp-action="UpdateFeedCategory"
				    type="update" class="btn btn-primary">Update</button>
				</div>
		</form>
	</div>
</div>