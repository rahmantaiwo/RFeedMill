@using QFeedMill.Models.Dto.Feed;

@model FeedDto;

@{
    ViewData["Title"] = "Feed Detail";
}

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            @Model.Phase
        </div>
        <div class="card-body">
            <h5 class="card-phase">@Model.Phase</h5>
            <p class="card-text">FeedCategoryId:  @Model.FeedCategoryId</p>
            <p class="card-text">Kilogram:  @Model.Kilogram</p>
            <p class="card-text">Quantity:      @Model.Quantity</p>
            <p class="card-text">Price:      @Model.Price</p>
            
            <a asp-controller="Feed" asp-action="UpdateFeed"
               asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>