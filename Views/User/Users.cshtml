@{
    @model IEnumerable<QFeedmill.Shared.Models.Dto.User.UserDto>

}

@{
    ViewData["Title"] = "Users";
    var i = 0;
}
<a href="@Url.Action("CreateUser","User")" class="btn btn-outline-primary">Create Account</a>
<br />

<div class="col-md-10">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">OtherName</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">PhoneNumber</th>
            </tr>
        </thead>

        <tbody>


            @if (Model?.Any() ?? false)
            {
                var index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td>
                        <td>@item.PhoneNumber</td>

                        <td>
                            <a asp-controller="User" asp-action="UserDetail"
                               asp-route-id="@item.Id" class="btn btn-outline-info">Detail</a>
                        </td>

                        <td>
                            <button asp-controller="User" asp-action="DeleteUser"
                                    asp-route-id="@item.Id" class="btn btn-outline-danger">
                                Delete
                            </button>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No Record Found</td>
                </tr>
            }

    </table>
</div>